@model User

<!-- THIS IS THE HTML FOR REGISTRATION: -->
<div class="container">
  <div class="row">
    <div class="col-6">
        <h1>Register to this Cool Site!</h1>
        <br>
    </div>
        <div class="col">
        <a href="Login">Login</a>
        <br>
    </div>
  </div>
</div>

<form asp-action="Registration" asp-controller="Home" method="post">
    <div class="container" style="margin-top: 30px;">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <span class="text-danger font-weight-bold" asp-validation-for="FirstName"></span>
                    <label asp-for="FirstName"></label>
                    <input class="form-control" asp-for="FirstName">
                </div>
                <div class="form-group">
                    <span class="text-danger font-weight-bold" asp-validation-for="LastName"></span>
                    <label asp-for="LastName"></label>
                    <input class="form-control" asp-for="LastName">
                </div>
                <div class="form-group">
                    <span class="text-danger font-weight-bold" asp-validation-for="Email"></span>
                    <label asp-for="Email"></label>
                    <input class="form-control" asp-for="Email">
                </div>
                <button class="btn btn-info">Sign up Now</button>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <span class="text-danger font-weight-bold" asp-validation-for="Password"></span>
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password">
                </div>
                <div class="form-group">
                    <span class="text-danger font-weight-bold" asp-validation-for="PasswordConfirm"></span>
                    <label asp-for="PasswordConfirm"></label>
                    <input class="form-control" asp-for="PasswordConfirm">
                </div>
            </div>
        </div>
    </div>
</form>

    


